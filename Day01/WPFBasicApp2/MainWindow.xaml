<Window x:Class="WPFBasicApp2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFBasicApp2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <!--Viewbox Size엥 맞춰서 Stretch가 Fill 되니깐 정사각형 -> 직사각형이 됨-->
        <Viewbox Width="300" Height="150" Stretch="UniformToFill"
                 ScrollViewer.VerticalScrollBarVisibility="Visible">
            <Image Source="/Image/Cat.png" />
        </Viewbox>  
    </Grid>
</Window>
